  
  <div id="homePage"> 
    
    <h2>Search for a Book!</h2>

    <form action="/" method="GET">
        Book Title:
        <input class="textInput" type="text" name="title" value="" placeholder="Enter title">
        Author:
        <input class="textInput" type="text" name="author" value="" placeholder="Enter author's name">
        <input id="searchBtn" type="submit" name="" value="Filter">
    </form>

      
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner" width="500px">

            <div class="carousel-item active">
                <img class="d-block img-fluid" src="../images/onEarth.jpg" width="150px" alt="First slide">
            </div>

            <div class="carousel-item">
                <img class="d-block img-fluid" src="../images/gobletOfFire.jpg" width="150px" alt="Second slide">
            </div>

            <div class="carousel-item">
                <img class="d-block img-fluid" src="../images/theFault.jpg" width="150px" alt="Third slide">
            </div>

            <div class="carousel-item">
                <img class="d-block img-fluid" src="../images/crime.jpg" width="150px" alt="Fourth slide">
            </div>

            <div class="carousel-item">
                <img class="d-block img-fluid" src="../images/eragon.jpg" width="150px" alt="Fifth slide">
            </div>

            </div>

            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>

            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>

    </div>
    
    <table id="mainTable">
        <thead>
            <th>Book Title</th>
            <th>Author</th>
            <th>Rating</th>
            <th>Review</th>
        </thead>

        <tbody>
            {{#each filtered}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.author}}</td>
                    <td>{{this.rating}}</td>
                    <td>{{this.review}}</td>
                </tr>
            {{/each}}
        </tbody>

        {{!-- on initial display, before any filtering --}}
        <tbody>
            {{#each library}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.author}}</td>
                    <td>{{this.rating}}</td>
                    <td>{{this.review}}</td>
                </tr>
            {{/each}}
        </tbody>
        
    </table>
        

</div> 
